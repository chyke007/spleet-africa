{
  "name": "spleet",
  "version": "1.0.0",
  "description": "Spleet",
  "main": "index.js",
  "scripts": {
    "build-ts": "tsc",
    "coveralls": "jest  --setupFiles dotenv/config --coverage && cat ./coverage/lcov.info | coveralls",
    "dev": "concurrently --kill-others  \"npm run watch-ts\" \"npm run watch-node\" \"npm run lint-w\"",
    "lint": "tsc --noEmit && esw \"**/*.{js,ts}\" --quiet --fix",
    "lint-w": "tsc --noEmit && esw  \"**/*.{js,ts}\" --quiet --fix -w",
    "postinstall": "tsc",
    "serve": "node dist/index.js",
    "start": "npm run serve",
    "test": "jest --setupFiles dotenv/config -i --runInBand",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test --setupFiles dotenv/config --watchAll",
    "watch-ts": "tsc -w"
  },
  "keywords": [
    "spleet",
    "fullstack",
    "typescript",
    "backend",
    "api",
    "tdd",
    "eslint"
  ],
  "author": "Nwachukwu Chibuike",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "nanoid": "^3.1.20",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/cors": "^2.8.9",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/nanoid": "^2.1.0",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^5.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.18.0",
    "eslint-watch": "^7.0.0",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
